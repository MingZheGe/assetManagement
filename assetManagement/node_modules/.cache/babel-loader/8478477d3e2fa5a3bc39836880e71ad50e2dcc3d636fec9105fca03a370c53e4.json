{"ast":null,"code":"import dayjs from 'dayjs';\nimport { useAmountCount } from '~/composables';\nimport BillItem from './BillItem.vue'; // Import your BillItem component\nimport { computed } from 'vue';\nexport default {\n  components: {\n    BillItem\n  },\n  data() {\n    return {\n      week: ['星期日', '星期一', '星期二', '星期三', '星期四', '星期五', '星期六']\n    };\n  },\n  computed: {\n    today() {\n      return dayjs().format('M月D日 ' + this.week[dayjs().day()]);\n    },\n    amountCount() {\n      return useAmountCount(this.data);\n    }\n  },\n  props: {\n    data: Array,\n    month: String\n  }\n};","map":{"version":3,"names":["dayjs","useAmountCount","BillItem","computed","components","data","week","today","format","day","amountCount","props","Array","month","String"],"sources":["src/components/BillContainer.vue"],"sourcesContent":["<template>\n  <div class=\"bill-list\">\n    <div class=\"info-bar\">\n      <div style=\"font-size: 1rem; color: #000;\">\n        {{ month ? month + '月' : '今天' }}\n      </div>\n      <div style=\"flex: 1\">\n        {{ month ? '' : today }}\n      </div>\n      <div class=\"info\">\n        <span>收</span>\n        <span class=\"amount\">{{ amountCount.income }}</span>\n        <span>支</span>\n        <span class=\"amount\">{{ amountCount.expend }}</span>\n      </div>\n    </div>\n    <div>\n      <BillItem v-for=\"item in data\" :key=\"item.id\" :data=\"item\" />\n    </div>\n  </div>\n</template>\n\n<script>\nimport dayjs from 'dayjs'\nimport { useAmountCount } from '~/composables'\nimport BillItem from './BillItem.vue' // Import your BillItem component\nimport { computed } from 'vue'\n\nexport default {\n  components: {\n    BillItem,\n  },\n  data() {\n    return {\n      week: ['星期日', '星期一', '星期二', '星期三', '星期四', '星期五', '星期六'],\n    }\n  },\n  computed: {\n    today() {\n      return dayjs().format('M月D日 ' + this.week[dayjs().day()])\n    },\n    amountCount() {\n      return useAmountCount(this.data)\n    },\n  },\n  props: {\n    data: Array,\n    month: String,\n  },\n}\n</script>\n\n<style scoped lang=\"less\">\n.bill-list {\n  color: gray;\n  padding: 1rem;\n  background-color: #fff;\n}\n\n  .info-bar {\n    display: flex;\n    gap: 0.5rem;\n    align-items: flex-end;\n    font-size: @font-size-xs;\n    color: @gray-0;\n\n    .amount {\n      color: @gray-1;\n      margin: 0 0.5rem 0 0.2rem;\n    }\n  }\n</style>\n"],"mappings":"AAuBA,OAAAA,KAAA;AACA,SAAAC,cAAA;AACA,OAAAC,QAAA;AACA,SAAAC,QAAA;AAEA;EACAC,UAAA;IACAF;EACA;EACAG,KAAA;IACA;MACAC,IAAA;IACA;EACA;EACAH,QAAA;IACAI,MAAA;MACA,OAAAP,KAAA,GAAAQ,MAAA,gBAAAF,IAAA,CAAAN,KAAA,GAAAS,GAAA;IACA;IACAC,YAAA;MACA,OAAAT,cAAA,MAAAI,IAAA;IACA;EACA;EACAM,KAAA;IACAN,IAAA,EAAAO,KAAA;IACAC,KAAA,EAAAC;EACA;AACA"},"metadata":{},"sourceType":"module","externalDependencies":[]}