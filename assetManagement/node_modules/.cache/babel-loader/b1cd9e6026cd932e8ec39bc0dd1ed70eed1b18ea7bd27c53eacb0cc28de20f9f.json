\nimport BillItem from './BillItem.vue' // Import your BillItem component\nimport {sumCount} from '../compute/amountFormat'\n\nexport default {\n  components: {\n    BillItem,\n  },\n  data() {\n    return {\n      items: [\n        { id: 1, type: 'expend', amount: 100.32, date: '2023-10-01', category: 'food', remark: 'Lunch' },\n        { id: 2, type: 'income', amount: 200.21, date: '2023-10-02', category: 'food' },\n        { id: 3, type: 'expend', amount: 50, date: '2023-10-03', category: 'transport', remark: 'Bus fare' },\n        // 添加其他项目\n      ],\n      week: ['星期日', '星期一', '星期二', '星期三', '星期四', '星期五', '星期六'],\n    }\n  },\n  computed: {\n    today() {\n      return dayjs().format('M月D日 ' + this.week[dayjs().day()])\n    },\n\n    amountCount() {\n      return sumCount(this.items)\n    },\n\n   \n  },\n  props: {\n    data: Array,\n    month: String,\n  },\n}\n</script>\n\n<style scoped lang=\"less\">\n@import '../styles/common.less';\n.bill-list{\n  margin-top: .5rem;\n  color: gray;\n  padding: 1rem;\n  background-color: #fff;\n\n  .info-bar{\n  display: flex;\n  gap: .5rem;\n  align-items: flex-end;\n  font-size: @font-size-xs;\n  color: @gray-0;\n  .amount{\n    color:@gray-1;\n    margin: 0 .5rem 0 .2rem;\n  }\n}\n}\n</style>"],"mappings":"AAuBA,OAAAA,KAAA;AACA,OAAAC,QAAA;AACA,SAAAC,QAAA;AAEA;EACAC,UAAA;IACAF;EACA;EACAG,KAAA;IACA;MACAC,KAAA,GACA;QAAAC,EAAA;QAAAC,IAAA;QAAAC,MAAA;QAAAC,IAAA;QAAAC,QAAA;QAAAC,MAAA;MAAA,GACA;QAAAL,EAAA;QAAAC,IAAA;QAAAC,MAAA;QAAAC,IAAA;QAAAC,QAAA;MAAA,GACA;QAAAJ,EAAA;QAAAC,IAAA;QAAAC,MAAA;QAAAC,IAAA;QAAAC,QAAA;QAAAC,MAAA;MAAA;MACA;MAAA,CACA;;MACAC,IAAA;IACA;EACA;EACAC,QAAA;IACAC,MAAA;MACA,OAAAd,KAAA,GAAAe,MAAA,gBAAAH,IAAA,CAAAZ,KAAA,GAAAgB,GAAA;IACA;IAEAC,YAAA;MACA,OAAAf,QAAA,MAAAG,KAAA;IACA;EAGA;EACAa,KAAA;IACAd,IAAA,EAAAe,KAAA;IACAC,KAAA,EAAAC;EACA;AACA"},"metadata":{},"sourceType":"module","externalDependencies":[]}